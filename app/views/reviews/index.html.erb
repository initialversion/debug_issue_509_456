<div class="page-header">
  <h1>
    Reviews
    <a href="/reviews/new" class="btn btn-lg btn-success">New Review</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Date idea</th>
        <th>User</th>
        <th>Date idea rating</th>
        <th>Date idea rating comment</th>
        <th>Actions</th>
      </tr>

      <% @reviews.each do |review| %>
      <tr>
        <td>
          <% if review.date_idea.present? %>
            <a href="/ideas/<%= review.date_idea.id %>">
              <%= review.date_idea.user_id %>
            </a>
          <% end %>
        </td>
        <td>
          <% if review.user.present? %>
            <a href="/users/<%= review.user.id %>">
              <%= review.user.email %>
            </a>
          <% end %>
        </td>
        <td><%= review.date_idea_rating %></td>
        <td><%= review.date_idea_rating_comment %></td>
        <td>
          <a href="/reviews/<%= review.id %>" class="btn btn-primary">Show</a>
          
          <% if current_user == review.user %>
            <a href="/reviews/<%= review.id %>/edit" class="btn btn-warning">Edit</a>
            <a href="/delete_review/<%= review.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @reviews, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
