<div class="page-header">
  <h1>
    Helpful ratings
    <a href="/helpful_ratings/new" class="btn btn-lg btn-success">New Helpful rating</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Review</th>
        <th>Helpful rate</th>
        <th>User</th>
        <th>Actions</th>
      </tr>

      <% @helpful_ratings.each do |helpful_rating| %>
      <tr>
        <td>
          <% if helpful_rating.review.present? %>
            <a href="/reviews/<%= helpful_rating.review.id %>">
              <%= helpful_rating.review.date_idea_id %>
            </a>
          <% end %>
        </td>
        <td><%= helpful_rating.helpful_rate %></td>
        <td>
          <% if helpful_rating.user.present? %>
            <a href="/users/<%= helpful_rating.user.id %>">
              <%= helpful_rating.user.email %>
            </a>
          <% end %>
        </td>
        <td>
          <a href="/helpful_ratings/<%= helpful_rating.id %>" class="btn btn-primary">Show</a>
          
          <% if current_user == helpful_rating.user %>
            <a href="/helpful_ratings/<%= helpful_rating.id %>/edit" class="btn btn-warning">Edit</a>
            <a href="/delete_helpful_rating/<%= helpful_rating.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @helpful_ratings, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
