<div class="page-header">
  <h1>
    Ideas
    <a href="/ideas/new" class="btn btn-lg btn-success">New Idea</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>User</th>
        <th>Date title</th>
        <th>Date description</th>
        <th>Price category</th>
        <th>Actions</th>
      </tr>

      <% @ideas.each do |idea| %>
      <tr>
        <td><%= idea.user.email %></td>
        <td><%= idea.date_title %></td>
        <td><%= idea.date_description %></td>
        <td><%= idea.price_category %></td>
        <td>
          <a href="/ideas/<%= idea.id %>" class="btn btn-primary">Show</a>
          
          <% if current_user == idea.user %>
            <a href="/ideas/<%= idea.id %>/edit" class="btn btn-warning">Edit</a>
            <a href="/delete_idea/<%= idea.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @ideas, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
