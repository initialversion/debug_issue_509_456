<div class="page-header">
  <h1>
    Venues
    <a href="/venues/new" class="btn btn-lg btn-success">New Venue</a>
  </h1>
</div><div class="row mb-1">
  <div class="col-md-12">
    <%= search_form_for @q, :class => collapse_search_form, :id => "venues_filters" do |f| %>
      <p class="lead">Narrow results:</p>

        <div class="form-group">
  <%= f.label :date_id, "Date" %>
  <div class="row">
    <div class='col-md-6 mb-1'>
      <%= f.text_field :date_id_gteq, :class => "form-control", :placeholder => "Date greater than or equal to" %>
    </div>
    <div class='col-md-6'>
      <%= f.text_field :date_id_lteq, :class => "form-control", :placeholder => "Date less than or equal to" %>
    </div>
  </div>
</div>

<div class="form-group">
    <%= f.label :zip_code_cont, "Zip code contains" %>
    <%= f.text_field :zip_code_cont, :class => "form-control", :placeholder => "Zip code contains" %>
  </div>

<div class="form-group">
    <%= f.label :state_cont, "State contains" %>
    <%= f.text_field :state_cont, :class => "form-control", :placeholder => "State contains" %>
  </div>

<div class="form-group">
    <%= f.label :city_cont, "City contains" %>
    <%= f.text_field :city_cont, :class => "form-control", :placeholder => "City contains" %>
  </div>

<div class="form-group">
    <%= f.label :street_address_cont, "Street address contains" %>
    <%= f.text_field :street_address_cont, :class => "form-control", :placeholder => "Street address contains" %>
  </div>

<div class="form-group">
    <%= f.label :venue_description_cont, "Venue description contains" %>
    <%= f.text_field :venue_description_cont, :class => "form-control", :placeholder => "Venue description contains" %>
  </div>

<div class="form-group">
    <%= f.label :venue_title_cont, "Venue title contains" %>
    <%= f.text_field :venue_title_cont, :class => "form-control", :placeholder => "Venue title contains" %>
  </div>

<div class="form-group">
    <%= f.label :website_url_cont, "Website url contains" %>
    <%= f.text_field :website_url_cont, :class => "form-control", :placeholder => "Website url contains" %>
  </div>

<div class="form-group">
          <%= f.label :created_at, "Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='created_atgteqPicker'>
                  <%= f.text_field :created_at_gteq, :class => "form-control", :placeholder => "Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='created_atlteqPicker'>
                  <%= f.text_field :created_at_lteq, :class => "form-control", :placeholder => "Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#created_atgteqPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atlteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atgteqPicker').on("dp.change", function (e) {
                  $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#created_atlteqPicker').on("dp.change", function (e) {
                  $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

        

      <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

      <a href="/venues" class="btn btn-default btn-block mb-1">Clear filters</a>
    <% end %>
    <a class="btn btn-default btn-block mb-1" data-toggle="collapse" href="#venues_filters">
      Show Filters
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Date</th>
        <th>Venue title</th>
        <th>Venue description</th>
        <th>Street address</th>
        <th>City</th>
        <th>State</th>
        <th>Zip code</th>
        <th>Website url</th>
        <th>Actions</th>
      </tr>

      <% @venues.each do |venue| %>
      <tr>
        <td><%= venue.date_id %></td>
        <td><%= venue.venue_title %></td>
        <td><%= venue.venue_description %></td>
        <td><%= venue.street_address %></td>
        <td><%= venue.city %></td>
        <td><%= venue.state %></td>
        <td><%= venue.zip_code %></td>
        <td><%= venue.website_url %></td>
        <td>
          <a href="/venues/<%= venue.id %>" class="btn btn-primary">Show</a>
          <a href="/venues/<%= venue.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_venue/<%= venue.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @venues, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
